<div class="modal fade" id="select-city-modal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Закрыть</span></button>
                <h4 class="modal-title">Выберите ближайший к вам город</h4>
            </div>
            <div class="modal-body text-center">
                <ul class="list-unstyled">
                    {% set current_city = '' %}
                    {% for city, city_stores in sorted_stores.getSortedStores %}
                    {% if current_city != city %}
                    <li>
                        <a href="{{ path('setcity', {store: city_stores[0].id}) }}">
                            г. {{ city }}
                        </a>
                    </li>
                    {% set current_city = city %}
                    {% endif %}
                    {% endfor %}
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Закрыть</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->