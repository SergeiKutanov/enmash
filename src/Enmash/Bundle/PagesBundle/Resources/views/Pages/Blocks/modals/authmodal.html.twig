<div class="modal fade" id="auth-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Вход</h4>
            </div>
            <div class="modal-body">

                <div role="tabpanel">

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#login-tab" aria-controls="profile" role="tab" data-toggle="tab">Уже зарегистрировались?</a></li>
                        <li role="presentation"><a href="#register-tab" aria-controls="home" role="tab" data-toggle="tab" data-html-path="{{ path('fos_user_registration_register') }}">Зарегистрироваться</a></li>
                    </ul>

                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="login-tab">
                            {% render url("fos_user_security_login") %}
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="register-tab">
                            {% render url('fos_user_registration_register') %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->