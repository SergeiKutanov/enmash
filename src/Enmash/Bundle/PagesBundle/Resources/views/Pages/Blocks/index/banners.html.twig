<style>
    a.banner-opener img {
        width: 100%;
    }
</style>

{% for banner in banners %}
    {% include 'EnmashPagesBundle:Pages:Blocks/index/indexbanner.html.twig' with {'banner': banner} %}
{% endfor %}

<h2 class="text-center">Наши специальные предложения</h2>
<div id="banners-carousel" class="banners-carousel carousel slide" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner">

        {% for banner in banners %}
            {% if loop.index is odd %}
                <div class="item {% if loop.index == 1 %}active{% endif %}">
            {% endif %}
                    <div class="col-xs-6" data-section-id="{{ banner.id }}">
                        <a href="#" class="banner-opener">
                            <img src="{% path banner.photo, 'big' %}">
                        </a>

                    </div>
            {% if loop.index is not odd %}
                </div>
            {% endif %}
        {% endfor %}
        {% if banners | length is odd %}
                </div>
        {% endif %}

    </div>

    <a class="left carousel-control" href="#banners-carousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#banners-carousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>

</div>
<hr>
<div id="banner-popup">
    {% for banner in banners %}
        {% include 'EnmashPagesBundle:Pages:Blocks/index/indexbanner.html.twig' with {'banner': banner } %}
    {% endfor %}
</div>