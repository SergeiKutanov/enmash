<style>
    div.carousel-inner div.item .carousel-caption {
        opacity: 0;
        left: 10px;
        top: 10px;
        -webkit-transition: all 2s ease;
        -moz-transition: all 2s ease;
        -o-transition: all 2s ease;
        -ms-transition: all 2s ease;
        transition: all 2s ease;
    }

    div.carousel-inner div.item .carousel-caption {
        left: -50px;

     }

    div.carousel-inner div.item.active .carousel-caption {
        left: 10px;

    }

    div.carousel-inner div.item.active .carousel-caption {
        opacity: 1;
    }
</style>

<div id="carousel" class="carousel slide" data-ride="carousel">

    {% set firstslide = random(3) %}

    <div class="go-down text-center">
        <a href="#about-anchor">
            <span class="glyphicon glyphicon-chevron-down"></span>
        </a>
    </div>

    {% include('EnmashPagesBundle:Pages:Blocks/Banners/cheap.html.twig') %}

    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="0" {% if firstslide == 0 %}class="active"{% endif %}></li>
        <li data-target="#carousel" data-slide-to="1" {% if firstslide == 1 %}class="active"{% endif %}></li>
        <li data-target="#carousel" data-slide-to="2" {% if firstslide == 2 %}class="active"{% endif %}></li>
        <li data-target="#carousel" data-slide-to="3" {% if firstslide == 3 %}class="active"{% endif %}></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item {% if firstslide == 0 %}active{% endif %} full-screen" style="background-image: url('{{ asset("bundles/enmashpages/images/jumbo1.jpg") }}')">
            <div class="curtain"></div>
            {#<div class="container">#}
                {#{% image '@EnmashPagesBundle/Resources/public/images/logo_energomash.png' %}#}
                {#<img src="{{ asset_url }}" alt="Логотип Энергомаш" class="jumbo-logo"/>#}
                {#{% endimage %}#}
            {#</div>#}
            <div class="carousel-caption">
                <p>20 филиалов и магазинов</p>
            </div>
        </div>
        <div class="item {% if firstslide == 1 %}active{% endif %} full-screen"  style="background-image: url('{{ asset("bundles/enmashpages/images/map.jpg") }}')">
            {#<div class="container">#}
                {#{% image '@EnmashPagesBundle/Resources/public/images/title.png' %}#}
                {#<img src="{{ asset_url }}" alt="Логотип Энергомаш" class="jumbo-logo"/>#}
                {#{% endimage %}#}
            {#</div>#}
            <div class="carousel-caption">
                <p>Тысячи изделий: от ламп до кабеля!</p>
            </div>
        </div>
        <div class="item {% if firstslide == 2 %}active{% endif %} full-screen" style="background-image: url('{{ asset("bundles/enmashpages/images/jumbo3.jpg") }}')">
            {#<div class="container">#}
                {#{% image '@EnmashPagesBundle/Resources/public/images/logo_energomash.png' %}#}
                {#<img src="{{ asset_url }}" alt="Логотип Энергомаш" class="jumbo-logo"/>#}
                {#{% endimage %}#}
            {#</div>#}
            <div class="carousel-caption">
                <p>Сбыт. Комплектация. Розничная торговля</p>
            </div>
        </div>
        <div class="item {% if firstslide == 3 %}active{% endif %} full-screen" style="background-image: url('{{ asset("bundles/enmashpages/images/jumbo2.jpg") }}')">
            <div class="carousel-caption">
                <p>Сеть магазинов <span class="logo-pic"></span></p>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>