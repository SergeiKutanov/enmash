<div class="row" id="retail-chain">
    <div class="col-xs-12 text-center">
        <h2>СЕТЬ МАГАЗИНОВ</h2>
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li class="active"><a href="#vladimir" role="tab" data-toggle="tab">Владимир</a></li>
            <li><a href="#vladimir-region" role="tab" data-toggle="tab">Владимирская область</a></li>
            <li><a href="#ivanovo-region" role="tab" data-toggle="tab">Ивановская область</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div class="tab-pane active fade in" id="vladimir">

                <div class="panel-group" id="accordion">
                    {% for store in stores.vladimir %}
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#store_{{store.id}}">
                                        {{ store.name }} - {{ store.address }}
                                    </a>
                                </h4>
                            </div>
                            <div id="store_{{ store.id }}" class="panel-collapse collapse">
                                <div class="panel-body">
                                    {% if store.storeImages | length > 0 %}
                                    <div class="col-xs-12 col-md-6">
                                    {% else %}
                                    <div class="col-xs-12">
                                    {% endif %}
                                        <h3>Информация</h3>
                                        <table class="table table-striped">
                                            <tr>
                                                <td>Часы работы</td>
                                                <td>{{ store.schedule }}</td>
                                            </tr>
                                            {% if store.contacts | length > 0 %}
                                            {% include 'EnmashPagesBundle:Pages:Blocks/storecontacts.html.twig' with {'store': store} %}
                                            {% endif %}
                                        </table>
                                    </div>
                                    {% if store.storeImages | length > 0 %}
                                    <div class="col-sx-12 col-md-6 store-images">
                                        <h3>Фотографии</h3>
                                        <div id="links">

                                            {% for media in store.storeImages.galleryHasMedias %}

                                                <a href="{% path media.media, 'big' %}" title="{{ media.media.name }}" data-gallery="store_{{ store.id }}" >
                                                    <img src="{% path media.media, 'small' %}" alt="{{ media.media.name  }}">
                                                </a>

                                            {% endfor %}

                                        </div>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>


