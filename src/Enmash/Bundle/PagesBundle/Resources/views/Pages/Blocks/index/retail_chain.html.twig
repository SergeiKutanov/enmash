        {% for city, city_stores in stores %}
        <div class="store-panel panel panel-default">
            <div class="panel-heading text-center">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#{{ city }}">
                        <b>{{ city }}</b> ({{ stores[city] | length }} магазинов) <span class="glyphicon glyphicon-collapse-down" aria-hidden="true"></span>
                    </a>
                </h4>
            </div>
            <div id="{{ city }}" class="panel-collapse collapse">
                <div class="panel-body">
                    <ul>
                        {% for store in city_stores %}
                        <li>
                            <a href="{{ path('stores-page') }}#store_{{ store.id }}">{{ store.address }} ({{ store.getTypesString() }})</a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
