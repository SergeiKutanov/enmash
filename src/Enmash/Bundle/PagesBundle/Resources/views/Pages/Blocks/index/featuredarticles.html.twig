<style>
    div.featured-articles .bg {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: block;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        z-index: -1;
    }

    div.featured-articles .bg:before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: block;
        background-color: rgba(255, 255, 255, .8);
    }

    @media screen and (min-width: 992px){
        .featured-articles .col-md-4 {
            min-height: 300px;
        }

        .featured-articles > div[class^=col-] {
            border-left: 1px solid #555555;
        }

        .featured-articles > div[class^=col-]:first-child {
            border-left: none;
        }
    }

    @media screen and (max-width: 992px) {
        .featured-articles div[class^=col-] {
            margin-bottom: 20px;
            min-height: 150px;
        }
    }

</style>
<h2 class="text-center">ВАША ПРИБЫЛЬ</h2>
<div class="row featured-articles">

    {% for article in articles %}
    <div class="col-xs-12 col-md-4" >
        <div class="bg" {% if article.featuredImage %}style="background-image: url('{% path article.featuredImage, 'big' %}')"{% endif %}>

        </div>
        <h3><a href="{{ path('article-page', {'slug': article.slug}) }}">{{ article.title }}</a></h3>
        <div class="article-body">
            {{ article.abstract | raw }}
        </div>
        <div class="text-right read-more">
            <a href="{{ path('article-page', {'slug': article.slug}) }}">Читать далее</a>
        </div>
        <hr class="visible-xs visible-sm">
    </div>
    {% endfor %}
</div>