<div class="article-preview" {% if article.featuredImage %}style="background-image: url('{% path article.featuredImage, 'big' %}')"{% endif %}>
    <div class="background-cover">
        <div class="">
            <h3><a href="{{ path('article-page', {'slug': article.slug}) }}">{{ article.title }}</a></h3>
        </div>
        <div class="">
            {{ article.abstract | raw }}
        </div>
        <div class="text-right">
            <a href="{{ path('article-page', {'slug': article.slug}) }}">Читать дальше</a>
        </div>
        <hr>
        {% if article.connectedArticles | length > 0 %}
        <div class="">
            <p>Серия статей на тему:</p>
            <ul class="list-unstyled">
                {% for connectedArticle in article.connectedArticles if connectedArticle.publish %}
                    <li class=""><a href="{{ path('article-page', {'slug': connectedArticle.slug}) }}">{{ connectedArticle.title }}</a></li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}
    </div>
</div>